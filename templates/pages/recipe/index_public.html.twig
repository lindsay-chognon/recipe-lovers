{% extends 'base.html.twig' %}

{% block title %}Recipe lovers - Mes recettes{% endblock %}

{% block body %}
    <div class='container mt-4'>
        {% if not recipes.items is same as([]) %}
            <h1>Recettes partag√©es</h1>

            <div class="d-flex justify-content-center flex-wrap">
                {% for recipe in recipes %}
                    <div class="card border-primary mb-3 mr-3" style="max-width: 20rem;">
                        <div class="card-header">{{ recipe.id }}</div>
                        <div class="card-body">
                            <h4 class="card-title">{{ recipe.name }}</h4>
                            <p class="card-text">{{ recipe.description | slice(0, 100) ~'...' }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>

        {% else %}
            <p>Il n'y a pas de recettes.</p>
        {% endif %}
    </div>
{% endblock %}

